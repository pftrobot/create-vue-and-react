{
    // 프로젝트명
    "name": "react-basic",
    // 프로젝트 버전
    "version": "0.1.0",
    // 서비스 작동시 필요한 패키지들
    "dependencies": {
      // 테스트용 패키지들
      "@testing-library/jest-dom": "^5.17.0",
      "@testing-library/react": "^13.4.0",
      "@testing-library/user-event": "^13.5.0",
      // 리액트 패키지들
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-scripts": "5.0.1",
      "web-vitals": "^2.1.4"
    },
    // yarn 명령어들
    "scripts": {
      "start": "react-scripts start",
      "build": "react-scripts build",
      "test": "react-scripts test",
      "eject": "react-scripts eject" // 실행하면 config, scripts 폴더가 생기면서 숨겨져있던 패키지 관련 설정 파일들이 나타남. package.json도 지저분해지므로 실행을 권하지 않음
    },
    // ESLINT 설정 옵션들
    "eslintConfig": {
      "extends": [
        "react-app",
        "react-app/jest"
      ]
    },
    // 허용하는 브라우저 버전들
    "browserslist": {
      // 배포서버 기준
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all"
      ],
      // 개발서버 기준
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    }
  }
  